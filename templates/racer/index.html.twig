{% extends 'admin/dashboard.html.twig' %}

{% block title %}All Racers{% endblock %}

{% block content %}
	<div class="animated fadeIn">
		<div class="row">
			<div class="col-lg-12 col-md-12">
				<div class="card">
					<div class="card-body">
						<table class="table table-hover" id="ranking">
							<thead>
							<th>Racer</th>
							</thead>
							<tbody>
								{% for racer in racers %}
								<tr>
									<td><img class="racer-img" src="{{ asset('images/racers/' ~ racer.image) }}"></td>
									<td class="racer-name">{{ racer.name}}</td>
								</tr>
							{% else %}
								<tr>
								<td>No Racers</td>
								</tr>
							{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
