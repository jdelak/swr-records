{% extends 'base.html.twig' %}
	{% block title %}SWR-RECORDS - Login{% endblock %}
{% block content %}
	<div class="row">
		<div class="col-lg-10 col-md-10 mx-auto">
			<div class="card">
				<div class="card-body">
					<h2 class="card-title">Login</h2>
					<div class="card-text">
						<form method="post" action="{{ path('security_login') }}">
							<div class="form-group">
								<label>Email</label>
								<input required type="text" name="_username" class="form-control">
							</div>
							<div class="form-group">
								<label>Password</label>
								<input required type="password" name="_password" class="form-control">
							</div>
					    	<div class="form-group">
				    			<button type="submit" class="btn btn-primary">Submit</button>
				    		</div>
			    		</form>
			    		<div>
			            <a href="{{ path('forgotten_password') }}">Forget Password ?</a>
			        	</div>
		    		</div>
	    		</div>
    		</div>
    		
    		<hr>
		</div>
	</div>
{% endblock %}