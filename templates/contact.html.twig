{% extends 'base.html.twig' %}
	{% block title %}SWR RECORDS - Contact{% endblock %}
	{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-10 col-md-10 mx-auto"><h2>Contact</h2>
            {{ form_start(form) }}
            {{ form_row(form.subject) }}
            {{ form_row(form.name) }}
            {{ form_row(form.email) }}
            {{ form_row(form.message) }}
            <button type="submit" class="btn btn-primary">Submit</button>
            <hr>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}