{% extends 'admin/dashboard.html.twig' %}

{% block title %}All Plaayers{% endblock %}

{% block content %}
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-hover" id="players">
                            <thead>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Country</th>
                            <th>Role</th>
                            </thead>
                            <tbody>
                            {% for player in players %}
                                <tr class="table-light">
                                    <td>{{ player.username }}</td>
                                    <td>{{ player.email }}</td>
                                    <td>{{ player.country.name }}</td>
                                    <td>
                                        {% for role in player.roles %}
                                            <span>{{ role }}</span>
                                        {% endfor %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr class="table-light">
                                    <td>No Records</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}